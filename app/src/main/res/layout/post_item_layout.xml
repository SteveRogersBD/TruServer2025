<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Icon -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_post_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"/>

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tv_user_name_post_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manojkumar"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/role_tv_post_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer"
                        android:textColor="#978F8F"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:maxHeight="40dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        android:layout_gravity="center_vertical"
                        app:tint="#978F8F"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        />
                    <TextView
                        android:id="@+id/pub_date_tv_post_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="posted 6 years ago"
                        android:textColor="#978F8F"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:maxHeight="40dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Image Section -->
        <ImageView
            android:id="@+id/post_image_post_item"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/farming"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" />

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Post Title -->
            <TextView
                android:id="@+id/title_post_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tomato"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Comment Count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
