<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GreenPulse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GreenPulse" parent="Base.Theme.GreenPulse" />

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary color (e.g., green for nature, science vibes) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color (bright accent for call-to-actions) -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Background color (light for clean aesthetic) -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@android:color/black</item>

        <!-- Surface color (for cards, dialogs, etc.) -->
        <item name="colorSurface">#FF5722</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Text color -->
        <item name="android:textColor">@color/white</item>

        <!-- Dark and Light modes -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Make sure status bar color is set explicitly -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowMinWidthMajor">90%</item>
    </style>
    <style name="PickerStyle">
        <item name="android:tint">@color/buttonSecondary</item>
    </style>
    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item> <!-- Replace with your desired color -->
        <item name="android:textSize">20sp</item> <!-- Optional: Adjust text size -->
    </style>



</resources>